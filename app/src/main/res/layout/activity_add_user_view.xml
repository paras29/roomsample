<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.paras.roomsample.user.userlist.AddUserView">

    <EditText
        android:id="@+id/etFName"
        android:layout_width="335dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/etLName"
        android:layout_width="334dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="-1dp"
        app:layout_constraintLeft_toLeftOf="@+id/etFName"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/etFName"
        tools:layout_editor_absoluteY="79dp" />

    <EditText
        android:id="@+id/etStreet"
        android:layout_width="155dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="Street "
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteY="136dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/etLName" />

    <EditText
        android:id="@+id/etCity"
        android:layout_width="161dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="City"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toRightOf="@+id/etStreet"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="@+id/etStreet"
        android:layout_marginTop="0dp" />

    <EditText
        android:id="@+id/etState"
        android:layout_width="153dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="State"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/etStreet"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/etStreet" />

    <EditText
        android:id="@+id/etPin"
        android:layout_width="163dp"
        android:layout_height="41dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="PIN"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@+id/etState"
        app:layout_constraintTop_toBottomOf="@+id/etCity" />

    <Button
        android:id="@+id/btnAddUser"
        android:layout_width="167dp"
        android:layout_height="50dp"
        android:text="Save"
        android:layout_marginTop="84dp"
        app:layout_constraintTop_toBottomOf="@+id/etState"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
